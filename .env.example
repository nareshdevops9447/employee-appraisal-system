
# ============================================
# Employee Appraisal System - Environment Variables (Example)
# ============================================

# ---- PostgreSQL ----
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ---- Database URLs (used by each service) ----
# Format: postgresql://<user>:<password>@<host>:<port>/<db_name>
AUTH_DB_URL=postgresql://postgres:postgres@postgres:5432/auth_db
USER_DB_URL=postgresql://postgres:postgres@postgres:5432/user_db
APPRAISAL_DB_URL=postgresql://postgres:postgres@postgres:5432/appraisal_db
GOAL_DB_URL=postgresql://postgres:postgres@postgres:5432/goal_db

# ---- JWT ----
# Generate a secure key: openssl rand -hex 32
JWT_SECRET=changeme_secret_key_must_be_long_and_secure
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ---- Microsoft Entra ID (Azure AD) ----
# See AZURE_AD_SETUP.md for instructions
AZURE_AD_CLIENT_ID=your_azure_client_id
AZURE_AD_CLIENT_SECRET=your_azure_client_secret
AZURE_AD_TENANT_ID=your_azure_tenant_id

# ---- Service URLs (internal Docker network) ----
AUTH_SERVICE_URL=http://auth-service:5001
USER_SERVICE_URL=http://user-service:5002
APPRAISAL_SERVICE_URL=http://appraisal-service:5003
GOAL_SERVICE_URL=http://goal-service:5004
API_GATEWAY_URL=http://api-gateway:5000

# ---- Frontend ----
# Public URL of the API Gateway (browser access)
NEXT_PUBLIC_API_URL=http://localhost:5000
# URL of the Next.js app
NEXTAUTH_URL=http://localhost:3000
# Generate: openssl rand -hex 32
NEXTAUTH_SECRET=changeme_different_secret_key_for_nextauth

# ---- Flask ----
FLASK_ENV=development
FLASK_DEBUG=1
